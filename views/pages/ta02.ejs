<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
  <link rel="stylesheet" href="../../public/stylesheets/ta02.css">
</head>

<body>
  <% include ../includes/nav.ejs %>
  <div class="jumbotron text-center">
    <div class="container">
      <h1>
        <%= title %>
      </h1>
      <p>This is Team Activity 02</p>
    </div>
  </div>
  <div style="display: flex; justify-content: space-between; align-items: center;" class="container">
    <div class="container-users">

      <% if (userList.length > 0) { %>
      <h1>Users: </h1><br>
      <% for (let user of userList) { %>
      <h3>
        <%= user %>
      </h3><br>
      <% } %>
      <% } %>
    </div>







    <div style="display: flex; flex-direction: column;" class="coutainer-btns">
      <% if (userRemoved == true){%>
      <h2 style="color:red">Could Not remove User, User not found</h2>
      <% } %>
      <% if(userFound == true){%>
      <h2 style="color:red">Could not add user. User already exists.</h2>
      <% } %>
      <form style="display: flex; align-items: center;" action="/ta02/addUser" method="POST">
        <input type="text" name="addUser" placeholder="Username"><br>
        <button type="submit">Add User</button>
      </form>

      <br>

      <form style="display: flex; align-items: center;" action="/ta02/removeUser" method="POST">
        <input type="text" name="removeUser" id="removeUser" placeholder="Remove user"><br>
        <button type="submit">Remove User</button>
      </form>
    </div>
  </div>
</body>

</html>